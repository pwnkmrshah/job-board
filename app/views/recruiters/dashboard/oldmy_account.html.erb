<style type="text/css">
	.avatar-wrapper {
	 position: relative;
	 height: 200px;
	 width: 200px;
	 margin: 50px auto;
	 border-radius: 50%;
	 overflow: hidden;
	 box-shadow: 1px 1px 15px -5px black;
	 transition: all 0.3s ease;
}
 .avatar-wrapper:hover {
	 transform: scale(1.05);
	 cursor: pointer;
}
 .avatar-wrapper:hover .profile-pic {
	 opacity: 0.5;
}
 .avatar-wrapper .profile-pic {
	 height: 100%;
	 width: 100%;
	 transition: all 0.3s ease;
}
 .avatar-wrapper .profile-pic:after {
	 font-family: FontAwesome;
	 content: "\f007";
	 top: 0;
	 left: 0;
	 width: 100%;
	 height: 100%;
	 position: absolute;
	 font-size: 190px;
	 background: #ecf0f1;
	 color: #34495e;
	 text-align: center;
}
 .avatar-wrapper .upload-button {
	 position: absolute;
	 top: 0;
	 left: 0;
	 height: 100%;
	 width: 100%;
}
 .avatar-wrapper .upload-button .fa-arrow-circle-up {
	 position: absolute;
	 font-size: 234px;
	 top: -17px;
	 left: 0;
	 text-align: center;
	 opacity: 0;
	 transition: all 0.3s ease;
	 color: #34495e;
}
 .avatar-wrapper .upload-button:hover .fa-arrow-circle-up {
	 opacity: 0.9;
}
 
</style>

<div class="container" style="margin-top:10%">
	<div class="row" id="main">
<div class="col-md-12">
    	<%#= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    	<%= form_for current_user, url: my_account_recruiters_dashboard_index_path , method: :post, :html =>   {:role => "form"} do |f| %>
			<h2>Edit your profile.<small>It's always easy</small></h2>
			<hr class="colorgraph">
			<div class="avatar-wrapper">
				<img class="profile-pic" src="" />
				<div class="upload-button">
					<%if current_user.dp.exists?%>
              				<%=  image_tag(current_user.dp.url(:thumb), :class => "common-img",  style: "height:169;width:169", alt: "Profile Image") %>
            		<%else%>
						<i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
            		<%end%>
				</div>
				<!-- <input class="file-upload" type="file"  name="user[dp]" accept="image/*"/> -->
				<%= f.file_field :dp, class:"file-upload" %> 
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
						<!-- <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="5"> -->
						<%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "Name", class:"form-control input-lg" %>
					</div>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.email_field :email, readonly: true, autocomplete: "email", placeholder:'Email', class:'form-control input-lg' %>
						<!-- <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-lg" placeholder="Confirm Password" tabindex="6"> -->

					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.text_field :phone, autofocus: true, autocomplete: "phone",placeholder: "Contact Number", class:"form-control input-lg" %>
						<!-- <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="5"> -->
					</div>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.text_field :address, autofocus: true, autocomplete: "address",placeholder: "Address", class:"form-control input-lg" %>
						<!-- <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-lg" placeholder="Confirm Password" tabindex="6"> -->
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.text_field :total_experience, autofocus: true, autocomplete: "total_experience",placeholder: "Total Experience", class:"form-control input-lg" %>
						<!-- <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="5"> -->
					</div>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.text_field :qualification, autofocus: true, autocomplete: "qualification",placeholder: "Qualifications", class:"form-control input-lg" %>
						<!-- <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-lg" placeholder="Confirm Password" tabindex="6"> -->
					</div>
				</div>
			</div>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-12 col-md-6"></div>
				<div class="col-xs-12 col-md-6">
					<!-- <a href="#" class="btn btn-success btn-block btn-lg">Save</a> -->
					<%=  f.button  "Save", class:"btn btn-success btn-block btn-lg" %>
				</div>
			</div>
		<% end %>
	</div>
	</div>
	</div>
	<script type="text/javascript">
	$(document).ready(function() {
	
    var readURL = function(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('.profile-pic').attr('src', e.target.result);
            }
    
            reader.readAsDataURL(input.files[0]);
        }
    }
   
    $(".file-upload").on('change', function(){
        readURL(this);
    });
    
    $(".upload-button").on('click', function() {
       $(".file-upload").click();
    });
});</script>
