<div id="quickview-login">
            <!-- Modal -->
            <div class="modal fade" id="productModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="bi bi-x"></i></span></button>
                        </div>
                        <div class="modal-body">
                            <div class="form-pop-up-content ptb-60 pl-60 pr-60">
                                <div class="area-title text-center mb-43">
                                    <img src="images/logo/logo.png" alt="jobhere">
                                </div>
                                <%= form_for(resource, as: resource_name, url: new_user_session_path) do |f| %>
                                    <div class="form-box">
                                        <!-- <input type="text" name="username" placeholder="Email" class="mb-14">
                                        <input type="password" name="pass" placeholder="Password"> -->
                                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email', class:'mb-14' %>
                                        <%= f.password_field :password, autocomplete: "current-password",   placeholder:'Password' %>
                                    </div>
                                    <% if devise_mapping.rememberable? %>
	                                    <div class="fix ptb-30">
	                                        <!-- <span class="remember pull-left"><input class="p-0 pull-left" type="checkbox">Remember Me</span> -->
	                                        <span class="remember pull-left"><%= f.check_box :remember_me, class: 'p-0 pull-left' %>Remember Me</span>
	                                        <!-- <span class="pull-right"><a href="#">Forget Password?</a></span> -->
	                                    </div>
                                	<% end %>
                                    <%= render "devise/shared/links" %>
                                    <div class="text-center">
                                        <button type="submit" class="text-uppercase">Login</button>
                                    </div>
                                <% end %>
                            </div>
                        </div>  
                    </div>  
                </div>
            </div>
        </div>