
<section class="featured-job-area feature-padding">
            <div class="container">
                <!-- Section Tittle -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-tittle text-center">
                            <h2>Applied Jobs</h2>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <!-- single-job-content -->
                          <%@my_jobs.each_with_index do |job, index| %>
                        <div class="single-job-items mb-30">
                            <div class="job-items">
                                <div class="company-img">
                                    <a href="job_details.html"><img src="assets/img/icon/job-list1.png" alt=""></a>
                                </div>
                                <div class="job-tittle">
                                    <a href="job_details.html"><h4><%= job.job&.company_name&.titleize %></h4></a>
                                    <ul>
                                        <li></li>
                                        <li><i class="fas fa-map-marker-alt"></i><%= job.job&.locality&.titleize%></li>
                                        <li><%= job.job&.job_type&.titleize %></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="items-link f-right">
                                <a href="<%=application_detail_applicants_dashboard_path(job.job_id)%>">View Application</a>
                            </div>
                        </div>
                          <%end%>
                    </div>
                </div>
            </div>
        </section>