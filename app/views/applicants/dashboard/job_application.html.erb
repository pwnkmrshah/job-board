<div class="job-post-area pb-100 pb-sm-35">
    <div class="container">
        <!-- Section Title Start -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title text-center ">
                    <h2>My applied Jobs</h2>
                </div>
            </div>
        </div>
        <!-- Section Title End -->
        <div class="all-job-post">
            <!-- Nav tabs -->
            <div class="post-tab nav">
                <a class="nav-link active show" data-toggle="tab" href="#recent_job">MY APPLICATION</a>
            </div>                            
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active show" id="recent_job">
                    <div class="row">
                    	<%@my_jobs.each_with_index do |job, index| %>
                        <div class="col-md-6">
                            <div class="single-job-post">
                                 <div class="img-icon">
                                    <%#= image_tag 'company-logo/1.png', alt: 'icon' %>
                                     <img src='/assets/images/company-logo/company.png' alt='icon' />
                                </div>
                                <div class="address">
                                    <h6><%= job.job.company_name.titleize %></h6>
                                    <p><span><%= job.job.title.titleize %></span></p>
                                    <p>Location : <%= job.job.locality.titleize %></p>
                                    <p>Job Type : <%= job.job.job_type.titleize %></p>
                                </div>
                                <div class="button-box"><a href="<%= applicants_job_path(job.id)%>" class="button button-black">VIEW APPLICATION</a></div> </a>
                            </div>                                    
                        </div>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

